<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="624dp"
            android:ems="10"
            android:hint="Enter Manufacturer"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etBHP"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etBHP"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="528dp"
            android:ems="10"
            android:hint="Horse Power"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/etUsers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etTransmission"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="203dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="480dp"
            android:ems="10"
            android:hint="Gear"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etYear"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etYear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="203dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="480dp"
            android:ems="10"
            android:hint="Year"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/etTransmission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etUsers"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="528dp"
            android:ems="10"
            android:hint="Users"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etBHP"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="347dp"
            android:layout_marginBottom="336dp"
            android:ems="10"
            android:hint="Enter Price$"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etPhone"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="251dp"
            android:layout_marginBottom="432dp"
            android:ems="10"
            android:hint="Enter Kilometre"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etYear"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="576dp"
            android:ems="10"
            android:hint="Enter Model"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etMan"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="299dp"
            android:layout_marginBottom="384dp"
            android:ems="10"
            android:hint="Enter Phone"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etKM"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAddCar"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="405dp"
            android:layout_marginBottom="181dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/RoundShape.App.8percent"
            android:src="@drawable/carplain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="150dp"
            android:layout_height="73dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Blue700"
            android:text="Add Car"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAddCar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>