<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPhotosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewAddphotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Add Photos to Your Listing"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFirstCarPhoto"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="106dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddphotos"
            app:shapeAppearance="@style/RoundShape.App.8percent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivSecondCarPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_iv"
            app:layout_constraintEnd_toStartOf="@+id/ivThirdCarPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFirstCarPhoto"
            app:shapeAppearance="@style/RoundShape.App.8percent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivThirdCarPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivSecondCarPhoto"
            app:layout_constraintTop_toBottomOf="@+id/ivFirstCarPhoto"
            app:shapeAppearance="@style/RoundShape.App.8percent" />


        <Button
            android:id="@+id/btnAddCarListing"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/Blue700"
            android:text="Add Car"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnRemoveImages"
            app:layout_constraintTop_toBottomOf="@+id/ivSecondCarPhoto" />

        <Button
            android:id="@+id/btnRemoveImages"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/Blue700"
            android:text="Reset Images"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/btnAddCarListing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivSecondCarPhoto" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>