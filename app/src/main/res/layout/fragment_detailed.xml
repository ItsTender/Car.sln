<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/DetailedCar"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carplain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/RoundShape.App.8percent" />

        <TextView
            android:id="@+id/DetailedMan"
            android:layout_width="397dp"
            android:layout_height="65dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Manufacturer+Model"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/DetailedHP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedCar" />

        <TextView
            android:id="@+id/DetailedPrice"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Price$"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedGear" />

        <TextView
            android:id="@+id/DetailedPhone"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="96dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Phone/Email"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedPrice" />

        <TextView
            android:id="@+id/DetailedHP"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="206dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Power"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedMan" />

        <TextView
            android:id="@+id/DetailedYear"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginStart="206dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Year"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedMan" />

        <TextView
            android:id="@+id/DetailedKilometre"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="206dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Kilometre"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedHP" />

        <TextView
            android:id="@+id/DetailedUsers"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginStart="206dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Owner/Users"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedYear" />

        <TextView
            android:id="@+id/DetailedGear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="81dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Transmission/Gear"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailedKilometre" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>