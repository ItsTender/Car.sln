<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserListingsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintListings"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/textViewUserListings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Your Car Listings"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view"
            android:layout_width="380dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserListings"
            app:shapeAppearance="@style/RoundShape.App.8percent" />



    </androidx.constraintlayout.widget.ConstraintLayout>>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/ConstraintListings">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerListings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>


</RelativeLayout>